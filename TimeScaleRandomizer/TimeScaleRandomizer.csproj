<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net35</TargetFramework>
        <OutputPath>..\bin\mono\BepInEx\plugins\TimeScaleRandomizer\</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <Configurations>Debug;Release;Release-netfx3;Release-net6</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Release-netfx3' ">
      <Optimize Condition=" '$(Optimize)' == '' ">true</Optimize>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Release-net6' ">
      <Optimize Condition=" '$(Optimize)' == '' ">true</Optimize>
    </PropertyGroup>

    <Target Name="EmbedVersion" BeforeTargets="BeforeBuild">
        <PropertyGroup>
            <!-- %3B is semicolon (;)  -->
            <_VersionTemplate>
// DO NOT EDIT this file - it is generated by the build
namespace Generated
{
    internal static class VersionInfo
    {
        internal const string Version = @"$(Version)"%3B
    }
}
            </_VersionTemplate>
        </PropertyGroup>
        <WriteLinesToFile File="Generated\VersionInfo.cs" Lines="$(_VersionTemplate)" WriteOnlyWhenDifferent="true" Overwrite="true" />
    </Target>
    
    <ItemGroup>
        <PackageReference Include="BepInEx.Core" Version="5.4.11" ExcludeAssets="runtime" />
        <PackageReference Include="HarmonyX" Version="2.4.2" ExcludeAssets="runtime" />
        <PackageReference Include="UnityEngine.Core" Version="5.6.0" ExcludeAssets="runtime" />
    </ItemGroup>
</Project>