<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <OutputPath>..\bin\il2cpp\BepInEx\plugins\TimeScaleRandomizer.IL2CPP\</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <RuntimeIdentifier>none</RuntimeIdentifier>
        <Configurations>Debug;Release;Release-netfx3;Release-net6</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release-netfx3' ">
      <Optimize Condition=" '$(Optimize)' == '' ">true</Optimize>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release-net6' ">
      <Optimize Condition=" '$(Optimize)' == '' ">true</Optimize>
    </PropertyGroup>

    <Target Name="EmbedVersion" BeforeTargets="BeforeBuild">
        <PropertyGroup>
            <!-- %3B is semicolon (;)  -->
            <_VersionTemplate>
// DO NOT EDIT this file - it is generated by the build
namespace Generated
{
    internal static class VersionInfo
    {
        internal const string Version = @"$(Version)"%3B
    }
}
            </_VersionTemplate>
        </PropertyGroup>
        <WriteLinesToFile File="Generated\VersionInfo.cs" Lines="$(_VersionTemplate)" WriteOnlyWhenDifferent="true" Overwrite="true" />
    </Target>
    
    <ItemGroup>
        <Compile Include="..\TimeScaleRandomizer\*.cs" LinkBase="Included" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.664" ExcludeAssets="runtime" />
        <PackageReference Include="IllusionLibs.HoneyCome.Il2Cppmscorlib" Version="2021.3.14.3" ExcludeAssets="runtime" />
        <PackageReference Include="IllusionLibs.HoneyCome.UnityEngine" Version="2021.3.14.3" ExcludeAssets="runtime" />
    </ItemGroup>
</Project>
